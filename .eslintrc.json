{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["airbnb-base", "eslint:recommended", "plugin:node/recommended", "plugin:prettier/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": "off",
    "no-plusplus": "off",
    "no-await-in-loop": "off",
    "no-restricted-syntax": "off"
  }
}
